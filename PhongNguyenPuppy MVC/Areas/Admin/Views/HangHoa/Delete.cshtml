@model PhongNguyenPuppy_MVC.Data.HangHoa

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa sản phẩm này?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Tên hàng hóa</dt>
    <dd class="col-sm-10">@Model.TenHh</dd>

    <dt class="col-sm-2">Đơn giá</dt>
    <dd class="col-sm-10">@String.Format("{0:N0} đ", Model.DonGia)</dd>

    <dt class="col-sm-2">Hình</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.Hinh))
        {
            <img src="~/Hinh/HangHoa/@Model.Hinh" width="100" />
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="MaHh" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
