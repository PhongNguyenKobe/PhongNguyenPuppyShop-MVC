@model List<PhongNguyenPuppy_MVC.Areas.Admin.ViewModels.HoaDonViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "_LayoutAdmin";

    string GetBadgeClass(string trangThai) => trangThai switch
    {
        "Mới đặt hàng" => "bg-warning text-dark",
        "Đã thanh toán" => "bg-info text-dark",
        "Chờ giao hàng" => "bg-primary",
        "Đã giao hàng" => "bg-success",
        "Khách hàng hủy đơn hàng" => "bg-danger",
        _ => "bg-secondary"
    };
    var tuKhoa = ViewBag.TuKhoa as string ?? "";
    var pageNumber = (int)(ViewBag.PageNumber ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var nam = ViewBag.Nam as int?;
    var currentYear = DateTime.Now.Year;
}

<h2 class="mb-4">📋 Danh sách hóa đơn</h2>

<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="tuKhoa" value="@tuKhoa" class="form-control" placeholder="🔍 Tìm theo tên hoặc mã HĐ..." />
    </div>
    <div class="col-md-2">
        <select name="nam" class="form-select">
            <option value="">-- Tất cả năm --</option>
            @for (int y = currentYear; y >= currentYear - 5; y--)
            {
                <option value="@y" selected="@(nam == y ? "selected" : null)">@y</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>
    </div>
</form>

<table class="table table-bordered table-hover align-middle">
    @Html.AntiForgeryToken()
    <thead class="table-light">
        <tr>
            <th>Mã HĐ</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th class="text-end">Tổng tiền</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hd in Model)
        {
            <tr>
                <td>@hd.MaHd</td>
                <td>@hd.HoTen</td>
                <td>@hd.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>
                    <!-- Add a placeholder "Chọn" as the visible default in the dropdown.
                         Keep the current status available in the options and as a data attribute
                         so we can validate or fallback in JavaScript if needed. -->
                    <select class="form-select form-select-sm trang-thai-select" data-id="@hd.MaHd" data-current="@hd.TrangThai">
                        <option value="">Chọn</option>
                        @foreach (var tt in ViewBag.TrangThaiList as List<SelectListItem>)
                        {
                            <option value="@tt.Value">@tt.Text</option>
                        }
                    </select>
                    <span class="badge mt-2 d-block @GetBadgeClass(hd.TrangThai)">
                        @hd.TrangThai
                    </span>
                </td>


                <td class="text-end">@hd.TongTien.ToString("N0") VNĐ</td>
                <td class="text-center">
                    <a asp-area="Admin" asp-controller="HoaDon" asp-action="Details" asp-route-id="@hd.MaHd" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-eye"></i> Chi tiết
                    </a>
                    <button type="button" class="btn btn-sm btn-success btn-luu-trangthai" data-id="@hd.MaHd">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                </td>

            </tr>
        }
    </tbody>
</table>
<!-- Phân trang -->
@if (totalPages > 1)
{
    <nav aria-label="Phân trang hóa đơn">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i&tuKhoa=@tuKhoa&nam=@nam">@i</a>
                </li>
            }
        </ul>
    </nav>
}
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-luu-trangthai').click(function () {
                const maHd = $(this).data('id');
                const select = $(`.trang-thai-select[data-id='${maHd}']`);
                let maTrangThai = select.val();
                const currentTrangThai = select.data('current');
                const token = $('input[name="__RequestVerificationToken"]').val();

                if (!maTrangThai) {
                    // Option 1: show warning and require selection
                    const toastEl = document.getElementById('toastThongBao');
                    const toastBody = toastEl.querySelector('.toast-body');
                    toastBody.textContent = '⚠️ Vui lòng chọn trạng thái trước khi lưu.';
                    toastEl.classList.remove('bg-success', 'bg-danger');
                    toastEl.classList.add('bg-warning', 'text-dark');
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();
                    return;
                    // Option 2 (alternative): uncomment next line to fallback to current value instead of blocking
                    // maTrangThai = currentTrangThai;
                }

                $.ajax({
                    url: '/Admin/HoaDon/CapNhatTrangThai',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: token,
                        maHd: maHd,
                        maTrangThai: maTrangThai
                    },
                    success: function () {
                        const toastEl = document.getElementById('toastThongBao');
                        const toastBody = toastEl.querySelector('.toast-body');
                        toastBody.textContent = '✅ Cập nhật trạng thái thành công!';
                        toastEl.classList.remove('bg-danger', 'bg-warning', 'text-dark');
                        toastEl.classList.add('bg-success');
                        const toast = new bootstrap.Toast(toastEl);
                        toast.show();

                        setTimeout(() => location.reload(), 2500); // Reload sau khi toast hiển thị
                    },
                    error: function (xhr) {
                        console.error("Lỗi:", xhr.responseText);
                        const toastEl = document.getElementById('toastThongBao');
                        const toastBody = toastEl.querySelector('.toast-body');
                        toastBody.textContent = '❌ Có lỗi xảy ra khi cập nhật trạng thái.';
                        toastEl.classList.remove('bg-success', 'bg-warning', 'text-dark');
                        toastEl.classList.add('bg-danger');
                        const toast = new bootstrap.Toast(toastEl);
                        toast.show();
                    }
                });
            });
        });
    </script>
}