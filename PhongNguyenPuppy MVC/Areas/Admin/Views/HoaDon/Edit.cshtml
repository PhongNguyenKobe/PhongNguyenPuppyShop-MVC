@model PhongNguyenPuppy_MVC.Areas.Admin.ViewModels.HoaDonEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Cập nhật trạng thái hóa đơn";
    Layout = "_LayoutAdmin";
}

<h2>Cập nhật trạng thái hóa đơn #@Model.MaHd</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaHd" />

    <div class="mb-3">
        <label asp-for="MaTrangThai" class="form-label">Trạng thái</label>
        <select asp-for="MaTrangThai" class="form-select" asp-items="ViewBag.TrangThaiList">
            <option value="">-- Chọn trạng thái --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
