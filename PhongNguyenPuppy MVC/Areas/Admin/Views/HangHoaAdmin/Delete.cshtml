@model PhongNguyenPuppy_MVC.Data.HangHoa
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-x-circle-fill me-2"></i> @TempData["Error"]
    </div>
}
<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill"></i> @ViewData["Title"]</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <div>
        <strong>Cảnh báo:</strong> Bạn sắp xóa sản phẩm này. Hành động này <span class="text-danger fw-bold">không thể hoàn tác</span>.
    </div>
</div>

<div class="card mb-4 shadow-sm">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="~/Hinh/HangHoa/@Model.Hinh" class="img-fluid rounded-start" alt="@Model.TenHh" />
            }
            else
            {
                <div class="p-4 text-muted">Không có hình ảnh</div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.TenHh</h5>
                <p class="card-text"><strong>Đơn giá:</strong> @String.Format("{0:N0} đ", Model.DonGia)</p>
                <p class="card-text text-danger">Bạn có chắc chắn muốn xóa sản phẩm này?</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.MaHh" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash-fill"></i> Xóa sản phẩm
    </button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
