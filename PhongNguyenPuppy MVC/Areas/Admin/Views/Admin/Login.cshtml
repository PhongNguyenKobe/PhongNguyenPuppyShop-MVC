@model PhongNguyenPuppy_MVC.ViewModels.LoginVM
@{
    ViewData["Title"] = "Admin - Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            border-top: 5px solid #0d6efd;
        }

        .brand-name {
            font-size: 1.8rem;
            font-weight: bold;
            color: #0d6efd;
        }

        .login-title {
            font-weight: bold;
            color: #0d6efd;
        }

        .btn-login {
            background-color: #0d6efd;
            border: none;
            font-weight: bold;
            border-radius: 8px;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background-color: #ffc107;
                color: black;
            }

        .form-control {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="brand-name">PhongNguyenPuppy</div>
            <h4 class="login-title mt-2">Admin Dashboard</h4>
            <p class="text-muted">Vui lòng đăng nhập để tiếp tục</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Email</label>
                <input name="email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input name="password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-login">🔐 Đăng nhập</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
