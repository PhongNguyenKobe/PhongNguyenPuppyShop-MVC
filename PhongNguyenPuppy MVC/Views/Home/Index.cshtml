                <h1 class="mb-5 display-3 text-primary">Thức ăn & Đồ dùng</h1>
                <div class="position-relative mx-auto">
                    <form asp-action="Search" asp-controller="HangHoa" method="get">
                        <input class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="text" name="query" placeholder="Tìm kiếm" required />
                        <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;">Tìm Kiếm</button>
                    </form>
                </div>
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active rounded">
                            <img src="~/img/hero_1.png" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide" />
                            <a href="#" class="btn px-4 py-2 text-white rounded">Thức ăn</a>
                        </div>
                        <div class="carousel-item rounded">
                            <img src="~/img/hero_2.png" class="img-fluid w-100 h-100 rounded" alt="Second slide" />
                            <a href="#" class="btn px-4 py-2 text-white rounded">Đồ dùng</a>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
