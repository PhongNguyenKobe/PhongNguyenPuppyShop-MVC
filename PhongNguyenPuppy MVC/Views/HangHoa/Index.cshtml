@model IEnumerable<PhongNguyenPuppy_MVC.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Index";
	Layout = "_DanhSachHangHoa"; 
    var pageNumber = (int)(ViewBag.PageNumber ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var loai = ViewBag.Loai;
}

<!-- Single Page Header start -->
@section BreadCum{
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Shop</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>

            <li class="breadcrumb-item"><a asp-controller="HangHoa" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active text-white">Shop</li>
        </ol>
    </div>
}
<!-- Single Page Header End -->
@await Html.PartialAsync("ProductItem", Model)

@if (totalPages > 1)
{
    <div class="col-12">
        <div class="pagination d-flex justify-content-center mt-5">
            <a class="rounded @(pageNumber == 1 ? "disabled" : "")"
               href="@Url.Action("Index", new { page = pageNumber - 1, loai = loai })">&laquo;</a>

            @for (int i = 1; i <= totalPages; i++)
            {
                <a class="rounded @(i == pageNumber ? "active" : "")"
                   href="@Url.Action("Index", new { page = i, loai = loai })">@i</a>
            }

            <a class="rounded @(pageNumber == totalPages ? "disabled" : "")"
               href="@Url.Action("Index", new { page = pageNumber + 1, loai = loai })">&raquo;</a>
        </div>
    </div>
}
