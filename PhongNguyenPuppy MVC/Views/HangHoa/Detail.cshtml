</div>
@section Scripts {
    <script defer src="https://static.addtoany.com/menu/page.js"></script>

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org/",
          "@@type": "Product",
          "name": "@Model.TenHh",
          "image": "@($"{Context.Request.Scheme}://{Context.Request.Host}/Hinh/HangHoa/{Model.Hinh}")",
          "description": "@Model.MoTaNgan",
          "offers": {
            "@@type": "Offer",
            "url": "@($"{Context.Request.Scheme}://{Context.Request.Host}/san-pham/{SeoHelper.GenerateSlug(Model.TenHh)}/{Model.MaHh}")",
            "priceCurrency": "VND",
            "price": "@Model.DonGia",
            "availability": "https://schema.org/InStock"
          }
        }
    </script>

    <script>
        (function($) {
            $(document).ready(function() {
                // Xử lý tăng/giảm số lượng
                $('.btn-minus').click(function(e) {
                    e.preventDefault();
                    var $input = $(this).closest('.input-group').find('input[name="quantity"]');
                    var value = parseInt($input.val()) || 1;
                    if (value > 1) {
                        $input.val(value - 1);
                    }
                });

                $('.btn-plus').click(function(e) {
                    e.preventDefault();
                    var $input = $(this).closest('.input-group').find('input[name="quantity"]');
                    var value = parseInt($input.val()) || 1;
                    var max = parseInt($input.attr('max')) || 999;
                    if (value < max) {
                        $input.val(value + 1);
                    }
                });

                // Đảm bảo chỉ nhập số và kiểm tra giới hạn
                $('input[name="quantity"]').on('input change', function() {
                    var value = parseInt($(this).val());
                    var min = parseInt($(this).attr('min')) || 1;
                    var max = parseInt($(this).attr('max')) || 999;

                    if (isNaN(value) || value < min) {
                        $(this).val(min);
                    } else if (value > max) {
                        $(this).val(max);
                    }
                });

                if (typeof $.fn.owlCarousel === 'undefined') {
                    var owlCSS = document.createElement('link');
                    owlCSS.rel = 'stylesheet';
                    owlCSS.href = '/lib/owlcarousel/assets/owl.carousel.min.css';
                    document.head.appendChild(owlCSS);

                    var owlJS = document.createElement('script');
                    owlJS.src = '/lib/owlcarousel/owl.carousel.min.js';
                    owlJS.onload = initCarousel;
                    document.body.appendChild(owlJS);
                } else {
                    initCarousel();
                }

                function initCarousel() {
                    $('.vegetable-carousel').owlCarousel({
                        autoplay: true,
                        smartSpeed: 1500,
                        center: false,
                        dots: true,
                        loop: @(Model.RelatedProducts.Count() > 4 ? "true" : "false"),
                        margin: 25,
                        nav: true,
                        navText: [
                            '<i class="bi bi-arrow-left"></i>',
                            '<i class="bi bi-arrow-right"></i>'
                        ],
                        responsive: {
                            0: { items: 1 },
                            576: { items: 2 },
                            768: { items: 3 },
                            992: { items: 4 }
                        }
                    });
                }
            });
        })(jQuery);
    </script>
}