@{
    ViewData["Title"] = "Thanh toán thất bại";
    var message = TempData["Message"] as string;
}

<div class="d-flex justify-content-center align-items-center bg-light" style="min-height: 100vh; padding-top: 190px; padding-bottom: 70px;">
    <div class="card shadow-sm p-5 text-center" style="max-width: 500px;">
        <div class="mb-4">
            <i class="bi bi-x-circle-fill text-danger" style="font-size: 3rem;"></i>
        </div>
        <h3 class="fw-bold text-danger">Thanh toán thất bại </h3>
        <p class="text-muted mt-3">Rất tiếc, giao dịch của bạn không thể hoàn tất.</p>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-warning mt-3">
                <strong>Thông báo:</strong> @message
            </div>
        }

        <div class="d-grid gap-2 mt-4">
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-outline-danger">🔁 Thử lại thanh toán</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">🏠 Về trang chủ</a>
        </div>
    </div>
</div>
