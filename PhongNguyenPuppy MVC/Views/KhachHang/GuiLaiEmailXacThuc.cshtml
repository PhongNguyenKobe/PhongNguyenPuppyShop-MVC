@{
    ViewData["Title"] = "Gửi lại email xác thực";
}

<div class="container mt-5 mb-5" style="padding-top: 150px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <i class="fas fa-envelope-open-text fa-3x mb-2"></i>
                    <h3 class="mb-0">📧 Gửi lại email xác thực</h3>
                </div>
                <div class="card-body p-4">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Lưu ý:</strong> Nhập email bạn đã sử dụng khi đăng ký để nhận lại link xác thực.
                    </div>

                    <form method="post" asp-action="GuiLaiEmailXacThuc">
                        <div class="mb-4">
                            <label for="email" class="form-label fw-bold">
                                <i class="fas fa-at"></i> Email đã đăng ký
                            </label>
                            <input type="email"
                                   class="form-control form-control-lg"
                                   id="email"
                                   name="email"
                                   placeholder="example@gmail.com"
                                   required
                                   autofocus>
                            <small class="form-text text-muted">
                                Vui lòng kiểm tra cả hộp thư spam/junk
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Gửi lại email
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">Đã có tài khoản?</p>
                        <a asp-action="DangNhap" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto focus vào input email
        document.getElementById('email').focus();
    </script>
}