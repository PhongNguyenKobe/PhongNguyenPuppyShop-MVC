@model PhongNguyenPuppy_MVC.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center bg-light" style="min-height: 100vh; padding-top: 100px;">
    <div class="card shadow-sm p-4" style="min-width: 400px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Chào mừng trở lại! 👋</h3>
            <p class="text-muted">Vui lòng đăng nhập để tiếp tục</p>
        </div>

        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl" >
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập" />
                <label asp-for="UserName"><i class="bi bi-person"></i> Tên đăng nhập</label>
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <label asp-for="Password"><i class="bi bi-lock"></i> Mật khẩu</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">🔐Đăng nhập</button>
                <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="btn btn-link text-decoration-none">Quên mật khẩu?</a>
            </div>
        </form>

        @if (ViewBag.ShowResendLink == true)
        {
            <div class="alert alert-warning mt-3">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Tài khoản chưa được kích hoạt!</strong>
                <p class="mb-2">Vui lòng kiểm tra email để kích hoạt tài khoản.</p>
                <a asp-action="GuiLaiEmailXacThuc" class="btn btn-sm btn-warning">
                    <i class="fas fa-redo"></i> Gửi lại email xác thực
                </a>
            </div>
        }

        <div class="text-center mt-3">
            <p class="mb-1">Chưa nhận được email xác thực?</p>
            <a asp-action="GuiLaiEmailXacThuc" class="text-primary">
                📧 Gửi lại email xác thực
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}