	<script>
		$(document).ready(function () {
		// ===== HÀM TÌM KIẾM =====
		function performSearch() {
		var searchQuery = $("#searchText").val().trim();

		if (searchQuery === "") {
			alert("⚠️ Vui lòng nhập từ khóa tìm kiếm");
			$("#searchText").focus();
			return;
		}

		// Encode URL để xử lý ký tự đặc biệt
		var encodedQuery = encodeURIComponent(searchQuery);
		var url = `/HangHoa/Search?query=${encodedQuery}`;

		// Đóng modal và chuyển trang
		$("#searchModal").modal('hide');
		window.location.href = url;
		}

		// Click nút search
		$("#searchButton").click(function(e) {
		e.preventDefault();
		performSearch();
		});

		// Nhấn Enter để tìm
		$("#searchText").keypress(function(e) {
		if (e.which === 13) {
			e.preventDefault();
			performSearch();
		}
		});

		// Auto-focus khi mở modal
		$('#searchModal').on('shown.bs.modal', function () {
		$('#searchText').focus();
		});

		// Clear input khi đóng
		$('#searchModal').on('hidden.bs.modal', function () {
		$('#searchText').val('');
		});
		});
	</script>

	<script>
		// ===== USER DROPDOWN =====
		document.addEventListener("DOMContentLoaded", function () {
		const toggleBtn = document.querySelector(".toggle-user-dropdown");
		const dropdown = document.querySelector(".custom-dropdown");

		if (toggleBtn && dropdown) {
		toggleBtn.addEventListener("click", function (e) {
			e.stopPropagation();
			dropdown.classList.toggle("show");
		});

		document.addEventListener("click", function (e) {
			if (!dropdown.contains(e.target) && !toggleBtn.contains(e.target)) {
				dropdown.classList.remove("show");
			}
		});
		}
		});
	</script>

